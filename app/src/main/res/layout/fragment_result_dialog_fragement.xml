<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.fadi.simulateurcea.ResultDialogFragement"
    android:padding = "5dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:textColor="@color/white"
        android:text="Resultat"
        />
      <!-- Line 1 -->
    <LinearLayout

        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenu Anuuel Net"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/revenu_annuel_net_imposable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="0.00"
            />


    </LinearLayout>
        <!-- End Of Line 1 -->
     <!-- Start Line 2   -->
        <LinearLayout

            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impot dû Avant CEA"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/impot_avant_cea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2.00dp"
                android:text="0.00"
                />


        </LinearLayout>
     <!-- End Of line 2 -->
        <!-- Start Line 3  -->
        <LinearLayout

            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum d inpot"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/minimum_impot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2.00dp"
                android:text="0.00"
                />


        </LinearLayout>
        <!-- End Of line 3 -->
        <!-- Start Line 4  -->
        <LinearLayout

            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impot dû apres CEA "
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/impot_apres_cea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2.00dp"
                android:text="0.00"
                />


        </LinearLayout>
        <!-- End Of line 4 -->

        <!-- Start Line 5  -->
        <LinearLayout

            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gain Impot Annuel "
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/gain_impot_annuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2.00dp"
                android:text="0.00"
                />


        </LinearLayout>
        <!-- End Of line 5 -->
        <!-- Start Line 5  -->
        <LinearLayout

            android:layout_marginTop="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gain Impot en % "
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/gain_impot_pourcentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2.00dp"
                android:text="0.00"
                />


        </LinearLayout>
        <!-- End Of line 5 -->
        <TextView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:textColor="@color/white"
            android:text=""
            />
    </LinearLayout>



</FrameLayout>
